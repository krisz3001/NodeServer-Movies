<!DOCTYPE html>
<html lang="hu">
<head>
  <title>Login</title>
  <meta charset="utf-8">
  <meta name="keywords" content="npp, login, notflex, notflexprime, notflexprime.tk, not, flex, prime">
  <meta name="description" content="Enter the password to log in.">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="icon" href="/favicon.ico">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-dark text-white">
  <div class="container text-center" style="display: flex; align-items: center; justify-content: center; height: 300px; flex-direction: column;">
      <h1>Type in the password</h1>
      <input type="password" id="pass" autofocus>
      <button id="b" class="btn btn-success m-2" onclick="send()">Send</button>
  </div>
  <div class="modal fade" id="lModal" tabindex="-1" aria-labelledby="lModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-dark">
      <div class="modal-header">
      <h5 class="modal-title" id="lModalLabel"></h5>
      <button type="button" class="btn-close bg-light" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="l">
      </div>
      <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
    </div>
  </div>
  <script>
      document.getElementById('pass').addEventListener("keydown", function(e){
          if(e.keyCode === 13) document.getElementById('b').click()
      })
      function send(){
        let formData = new FormData()
        formData.append("pass", document.getElementById('pass').value)
        let st
        let r
        fetch('/pass', {method: "POST", body : formData})
        .then(res => res.text())
        .then(r => {
            if(r == 'lololol'){
              window.open('https://www.youtube.com/watch?v=dQw4w9WgXcQ','_blank')
              document.getElementById('pass').value = ''
              alert('Azt hitted Ãºgy hagyom mi :D')
            }
            else if(r.length != 2){
              document.getElementById('l').innerText = r
              let modal = new bootstrap.Modal(document.getElementById('lModal'))
              modal.show()
              document.getElementById('pass').value = ''
            }
            else{
              location.reload()
              window.open('/','_self')
            }
        })
        }
  </script>
</body>
</html>
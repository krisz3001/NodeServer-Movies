<!DOCTYPE html>
<html lang="hu">
<head>
  <title>Login</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="icon" href="/favicon.ico">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-dark text-white">
  <div class="container text-center" style="display: flex; align-items: center; justify-content: center; height: 300px; flex-direction: column;">
      <h1>Type in the password</h1>
      <input type="password" id="pass" autofocus>
      <button id="b" class="btn btn-success m-2" onclick="send()">Send</button>
  </div>
  <script>
      document.getElementById('pass').addEventListener("keydown", function(e){
          if(e.keyCode === 13) document.getElementById('b').click()
      })
      function send(){
        let formData = new FormData()
        formData.append("pass", document.getElementById('pass').value)
        fetch('/pass', {method: "POST", body : formData})
        .then(response => response.text)
        .then(r => {
          location.reload()
          window.open('/','_self')
        })
        }
  </script>
</body>
</html>